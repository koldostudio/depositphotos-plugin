{
    "type": "submit",
    "title": "Depositphotos",
    "name": "depositphotos",
    "description": {
        "@t": "description"
    },
    "content": {
        "destinationName": "depositphotos",
        "properties": [
            {
                "name": "clickSubmit",
                "type": "boolean",
                "default": true,
                "title": {
                    "@t": "Click the submit button to complete the process."
                }
            },
            {
                "name": "uploadViaFTP",
                "type": "boolean",
                "title": {
                    "@t": "Use FTP for uploading."
                },
                "default": false
            }
        ],
        "buttons": [],
        "process": {
            "title": {
                "@t": "Submit to Depositphotos"
            },
            "icon": {
                "@urlfile": "icon.png"
            },
            "assetTypes": [
                "photo",
                "illustration",
                "vector",
                "video"
            ],
            "actions": [
                {
                    "name": "checkMetadata",
                    "type": "metadataFilter",
                    "args": {
                        "filter": [
                            "{meta.title}",
                            "{meta.description}",
                            "{len(meta.keywords) >= 5}"
                        ],
                        "failMessage": [
                            {
                                "@t": "Title is required"
                            },
                            {
                                "@t": "Description is required."
                            },
                            {
                                "@t": "At least 5 keywords are required."
                            }
                        ]
                    },
                    "pins": {
                        "next": "authCheck",
                        "fail": "@fail"
                    }
                },
                {
                    "name": "authCheck",
                    "type": "browserSubmit",
                    "title": {
                        "@t": "Authentication"
                    },
                    "args": {
                        "destination": "depositphotos",
                        "connection": "depositphotos",
                        "targetPage": "https://depositphotos.com/files/unfinished/page1.html",
                        "submitCode": {
                            "@textfile": "depositphotos_check_auth.js"
                        },
                        "marker": null
                    },
                    "pins": {
                        "fail": "@fail",
                        "next": "uploadCheck",
                        "unauthorized": "auth",
                        "notfound": "auth"
                    }
                },
                {
                    "name": "auth",
                    "type": "browserAuth",
                    "title": {
                        "@t": "Authorization"
                    },
                    "args": {
                        "targetPage": "https://depositphotos.com/login.html",
                        "loginPage": "https://depositphotos.com/login.html",
                        "destination": "depositphotos",
                        "forceLogin": true
                    },
                    "pins": {
                        "cancel": "@cancel",
                        "next": "uploadCheck"
                    }
                },
                {
                    "name": "uploadCheck",
                    "type": "uploadCheck",
                    "title": {
                        "@t": "Upload Check"
                    },
                    "args": {
                        "destination": "depositphotos"
                    },
                    "pins": {
                        "next": "uploadDecision",
                        "skip": "submit"
                    }
                },
                {
                    "name": "uploadDecision",
                    "type": "conditional",
                    "title": {
                        "@t": "Determine Upload Method"
                    },
                    "args": {
                        "condition": "{properties.uploadViaFTP}"
                    },
                    "pins": {
                        "true": "ftpUpload",
                        "false": "upload"
                    }
                },
                {
                    "name": "ftpUpload",
                    "type": "ftpUpload",
                    "title": {
                        "@t": "Uploading via FTP"
                    },
                    "args": {
                        "destination": "depositphotos",
                        "skipAlreadyUploaded": true,
                        "passive": true,
                        "retryAttempts": 3,
                        "timeout": 300000
                    },
                    "pins": {
                        "fail": "@fail",
                        "cancel": "@cancel",
                        "next": "submit"
                    }
                },
                {
                    "name": "upload",
                    "type": "upload",
                    "title": {
                        "@t": "Uploading via API"
                    },
                    "args": {
                        "destination": "depositphotos",
                        "skipAlreadyUploaded": true,
                        "connection": "depositphotos",
                        "retryAttempts": 3
                    },
                    "pins": {
                        "fail": "@fail",
                        "cancel": "@cancel",
                        "next": "submit"
                    }
                },
                {
                    "name": "submit",
                    "type": "browserSubmit",
                    "title": {
                        "@t": "Submit Files"
                    },
                    "args": {
                        "destination": "depositphotos",
                        "connection": "depositphotos",
                        "targetPage": "https://depositphotos.com/files/unfinished/page1.html",
                        "submitCode": {
                            "@textfile": "depositphotos_submit.js"
                        }
                    },
                    "pins": {
                        "fail": "@fail",
                        "notfound": "@fail",
                        "unauthorized": "auth"
                    }
                }
            ]
        }
    }
}